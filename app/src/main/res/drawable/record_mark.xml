<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="15%"
            android:pivotY="135%">
            <shape android:shape="rectangle">
                <solid android:color="@color/red"></solid>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="134%"
            android:pivotY="14.5%">

            <shape android:shape="rectangle">
                <solid android:color="@color/red"></solid>
            </shape>
        </rotate>
    </item>

</layer-list>